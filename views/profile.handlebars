<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-5">
    <h3>Create a New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

   {{#if cms.length}}
    <div class="col-md-7 project-list">
      <h3>Current Posts :</h3>

      {{#each cms as |cms|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h6><a href="/cms/{{cms.id}}">{{cms.title}} Posted on {{format_date cms.date_created}}</a></h6>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{cms.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
   {{/if}}

</div>

<script src="./js/profile.js"></script>
